---
import Container from "./Container.astro";
import { clinic } from "../data/clinic";

const whatsappText = encodeURIComponent(
  "Ol√°! Gostaria de marcar uma consulta."
);
const whatsappLink = `https://wa.me/${clinic.phoneE164.replace("+", "")}?text=${whatsappText}`;
---

<div id="contactos" style="padding: 1.1rem 0 0;">
  <Container>
    <div
      class="card"
      style="padding: 1rem; display:flex; gap:.8rem; flex-wrap:wrap; align-items:center; justify-content:space-between;"
    >
      <div>
        <div style="font-weight:800;">Contactos</div>
        <div class="muted">{clinic.address}</div>
      </div>

      <div style="display:flex; gap:.5rem; flex-wrap: wrap;">
        <a class="btn secondary" href={`tel:${clinic.phoneE164}`}
          >Ligar: {clinic.phoneDisplay}</a
        >
        <a class="btn secondary" href={`mailto:${clinic.email}`}>Email</a>
        <a class="btn" href={whatsappLink} target="_blank" rel="noopener"
          >WhatsApp</a
        >
      </div>
    </div>
  </Container>
</div>
