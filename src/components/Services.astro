---
import { clinic } from "../data/clinic";
---

<section id="servicos" class="section" data-reveal>
  <div class="container">
    <div class="section-head text-center">
      <h2 class="text-balance">Serviços</h2>
      <p class="subtitle mx-auto">
        Intervenções baseadas em evidência, com foco na sua recuperação e
        bem-estar. Acompanhamento individualizado e plano ajustado ao seu caso.
      </p>
    </div>

    <div class="grid gap-4 md:grid-cols-3">
      {
        clinic.services.map((s) => (
          <div class="card p-6 text-center flex items-center justify-center">
            <div class="font-semibold text-lg text-brand-900">{s}</div>
          </div>
        ))
      }
    </div>
  </div>
</section>
