---
import type { TeamMember } from "../types/team";
const { member } = Astro.props as { member: TeamMember };
---

<article class="card overflow-hidden h-full">
  <div class="grid md:grid-cols-2">
    <!-- Image: takes ~half on md+; full width on small -->
    <div class="relative">
      <img
        src={member.image}
        alt={`Fotografia de ${member.name}`}
        loading="lazy"
        class="w-full h-100 object-cover"
      />
      <!-- subtle overlay for readability / premium feel -->
      <div
        class="pointer-events-none absolute inset-0 bg-linear-to-t from-brand-900/15 via-transparent to-transparent"
      >
      </div>
    </div>

    <!-- Text -->
    <div class="p-6 md:p-7">
      <div
        class="font-extrabold text-brand-900 leading-tight text-lg md:text-xl"
      >
        {member.name}
      </div>
      <div class="text-brand-700/80 text-sm mt-1">
        {member.role} • {member.license}
      </div>

      <div
        class="mt-4 text-xs font-semibold text-brand-700/80 uppercase tracking-wide"
      >
        Formação
      </div>

      <ul class="mt-3 space-y-2">
        {
          member.qualifications.map((q) => (
            <li class="text-brand-700/80 text-sm leading-relaxed">
              <span class="mr-2">•</span>
              {q}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</article>
