---
import Section from "./Section.astro";
import Container from "./Container.astro";
import { clinic } from "../data/clinic";

const { imageSrc, alt } = Astro.props as {
  imageSrc?: string;
  alt?: string;
};

const src = imageSrc ?? "/images/map-placeholder.jpg";
const imgAlt = alt ?? "Mapa (substituir por screenshot do Google Maps)";
---

<Section
  title="Localização"
  subtitle="Clique no mapa para abrir no Google Maps."
>
  <Container>
    <a
      href={clinic.mapsLink}
      target="_blank"
      rel="noopener"
      class="card"
      style="display:block; overflow:hidden; text-decoration:none;"
      aria-label="Abrir localização no Google Maps"
    >
      <div style="position:relative;">
        <img
          src={src}
          alt={imgAlt}
          loading="lazy"
          style="width:100%; height:420px; object-fit:cover; display:block;"
        />
        <div style="position:absolute; left: 16px; bottom: 16px;">
          <span
            class="chip"
            style="background: rgba(0,0,0,.35); border-color: rgba(255,255,255,.25);"
          >
            Abrir no Google Maps →
          </span>
        </div>
      </div>
      <div style="padding: 1rem 1.1rem;">
        <div style="font-weight:800;">{clinic.address}</div>
        <div class="muted" style="margin-top:.35rem;">
          Castêlo da Maia, Maia
        </div>
      </div>
    </a>
  </Container>
</Section>
