---
import { Image } from "astro:assets";
import { clinic } from "../data/clinic";
import gmapsImg from "../assets/google_maps_screenshot.png";

const whatsappText = encodeURIComponent(
  "Olá! Gostaria de marcar uma consulta."
);
const whatsappLink = `https://wa.me/${clinic.phoneE164.replace("+", "")}?text=${whatsappText}`;

const imgAlt = "Mapa";
---

<section id="contactos" class="section" data-reveal>
  <div class="container">
    <div class="section-head text-center">
      <h2 class="text-balance">Contactos & Localização</h2>
      <p class="subtitle mx-auto">
        Marque a sua consulta e encontre-nos facilmente no Castêlo da Maia.
      </p>
    </div>

    <div class="grid gap-4 md:grid-cols-2">
      <!-- CONTACTOS -->
      <div class="card p-6 md:p-8">
        <div class="chip-accent inline-flex">Contactos</div>

        <div class="mt-4 space-y-4">
          <div class="card-soft p-5">
            <div class="text-brand-700/80 text-xs">Morada</div>
            <div class="mt-1 font-semibold text-brand-900">
              {clinic.address}
            </div>
          </div>

          <div class="grid gap-4 sm:grid-cols-2">
            <div class="card-soft p-5">
              <div class="text-brand-700/80 text-xs">Telefone</div>
              <div class="mt-1 font-semibold text-brand-900">
                {clinic.phoneDisplay}
              </div>
              <a
                class="mt-2 inline-block text-sm"
                href={`tel:${clinic.phoneE164}`}>Ligar</a
              >
            </div>

            <div class="card-soft p-5">
              <div class="text-brand-700/80 text-xs">Email</div>
              <div class="mt-1 font-semibold text-brand-900 break-words">
                {clinic.email}
              </div>
              <a
                class="mt-2 inline-block text-sm"
                href={`mailto:${clinic.email}`}>Enviar email</a
              >
            </div>
          </div>

          <div class="flex gap-3 flex-wrap">
            <a
              class="btn-primary"
              href={whatsappLink}
              target="_blank"
              rel="noopener">Marcar por WhatsApp</a
            >
            <a class="btn-secondary" href={`tel:${clinic.phoneE164}`}>Ligar</a>
            <a class="btn-secondary" href={`mailto:${clinic.email}`}>Email</a>
          </div>

          <div class="mt-2 text-sm text-brand-700/80">
            Atendimento sob marcação.
          </div>
        </div>
      </div>

      <!-- LOCALIZAÇÃO -->
      <a
        class="card overflow-hidden block"
        href={clinic.mapsLink}
        target="_blank"
        rel="noopener"
        aria-label="Abrir localização no Google Maps"
      >
        <div class="relative">
          <Image
            src={gmapsImg}
            alt={imgAlt}
            loading="lazy"
            class="w-full h-[360px] md:h-[420px] object-cover"
          />
          <div class="absolute left-4 bottom-4">
            <span class="chip bg-white/70">Abrir no Google Maps →</span>
          </div>
        </div>

        <div class="p-5 md:p-6">
          <div class="font-semibold text-brand-900">Localização</div>
          <div class="text-brand-700/80 text-sm mt-1">{clinic.address}</div>
        </div>
      </a>
    </div>
  </div>
</section>
